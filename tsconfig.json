{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "rootDir": "./src",
        "baseUrl": "./",
        "paths": {},
        "typeRoots": [
            "./node_modules/@types/**/*.d.ts",
        ],
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": false,
        "declarationDir": "./dist",
        "emitDeclarationOnly": false,
        "sourceMap": false,
        "outDir": "./dist",
        "removeComments": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "skipLibCheck": false
    },
    "exclude": ["./coverage", "./dist", "./node_modules", "./**/*.test.ts", "./*.config.ts"],
    "include": ["./src/**/*.ts"]
}